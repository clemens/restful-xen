# list all machines
curl -v 'http://localhost:3000/machines'

# get details for one machine
curl -v 'http://localhost:3000/machines/1'

# create a new machine
curl -v -d name=Test+Server+3 -d cpus=2 -d memory=4096M -d hdd=1000G 'http://localhost:3000/machines'

# update machine with id 1 to 2 cpus
curl -v -X PUT -d cpus=2 'http://localhost:3000/machines/1'

# reboot machine with id 1
curl -v -X PUT 'http://localhost:3000/machines/1/reboot'

# shutdown machine with id 1
curl -v -X PUT 'http://localhost:3000/machines/1/shutdown'

# delete machine with id 3
curl -v -X DELETE 'http://localhost:3000/machines/3'
